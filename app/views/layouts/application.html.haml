!!!
%html
%head
  %title Tumoni - Ordena tus finanzas con tu propios bolsillos
  = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
  = javascript_include_tag "application", "data-turbolinks-track" => true
  = csrf_meta_tags

%body
  .container
    - if notice
      .alert.alert-success
        %button.close(data-dismiss="alert") &times;
        %p= notice
    - if alert
      .alert.alert-danger
        %button.close(data-dismiss="alert") &times;
        %p= alert

    .row
      .col-xs-12
        %nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
          .container
            .navbar-header
              %a.navbar-brand(href="/") Tumoni

            - if user_signed_in?
              %ul.nav.navbar-nav
                %li= link_to "Bolsillos", pockets_path

                - if current_user.type_id == 1
                  %li.dropdown
                    %a.dropdown-toggle(href="#" data-toggle="dropdown")
                      Administraci√≥n 
                      %b.caret
                    %ul.dropdown-menu
                      %li= link_to "Movimientos", movements_history_path
                      %li= link_to "Bolsillos", pockets_history_path
                      %li.divider
                      %li= link_to "Usuarios", users_list_path


            %ul.nav.navbar-nav.navbar-right
              - if user_signed_in?
                %li= link_to "Salir", destroy_user_session_path, method: :delete

              - else  
                %li= link_to "Registro", new_user_registration_path
                %li= link_to "Entrar", new_user_session_path

            - if user_signed_in?
              %p.navbar-text.pull-right
                Hola, 
                = current_user.email

  = yield
